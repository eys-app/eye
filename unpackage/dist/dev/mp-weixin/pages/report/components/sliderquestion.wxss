.questionClass {
  margin: 10px 0;
  padding-top: 10px;
  padding-left: 5px;
}
.unSelected {
  border: 1px dashed red;
}
.un-active-alert {
  height: 40px;
  background-color: #ffe5e0;
  color: red;
  line-height: 40px;
  margin: 15px 15px 15px 10px;
  -webkit-border-radius: 5px;
          border-radius: 5px;
  padding-left: 10px;
  font-size: 14px;
}
.question-title {
  font-size: 16px;
  font-weight: 600;
}
.question-title .red-tag {
  color: red;
  margin-top: 3px;
  float: left;
}
.attention-text {
  color: #027e7e;
  font-size: 12px;
  margin-left: 20px;
  margin-top: 10px;
}
.user-selected {
  text-align: center;
  font-size: 18px;
  font-weight: 800;
  margin-top: 10px;
  margin-bottom: -10px;
}
.user-selected .text {
  font-size: 14px;
  color: gray;
  font-weight: 400;
  padding-right: 20px;
}
.answer-list {
  padding: 2px 0 0 0;
  margin: 15px 15px 15px 10px;
  -webkit-border-radius: 3px;
          border-radius: 3px;
}
.answer-list .min-number {
  float: left;
  font-size: 14px;
  color: gray;
  width: 10px;
  margin-top: 8px;
}
.answer-list .slider-center {
  float: left;
  width: calc(100% - 60px);
}
.answer-list .max-number {
  float: right;
  font-size: 14px;
  color: gray;
  width: 10px;
  margin-top: 8px;
}

