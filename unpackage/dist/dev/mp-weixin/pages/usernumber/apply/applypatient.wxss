.system-title {
  position: absolute;
  top: 50px;
  left: 10%;
  font-weight: 800;
  color: #FFFFFF;
}
.system-title .weclome {
  font-size: 18px;
}
.system-title .system-title-text {
  font-size: 26px;
  margin-top: 10px;
}
.view-page {
  padding: 10px;
  background-color: #F0F0F0;
  height: 100%;
  width: calc(100% - 20px);
  position: absolute;
}
.view-page .card-view {
  margin-top: 10px;
  width: 100%;
  background-color: #FFFFFF;
}
.view-page .card-view .input-fa-view {
  width: 100%;
  height: 40px;
  border-bottom: 1px solid #f4f5f6;
}
.view-page .card-view .input-fa-view .label-left {
  float: left;
  width: 100px;
  height: 100%;
  line-height: 40px;
  margin-left: 10px;
  font-size: 14px;
}
.view-page .card-view .input-fa-view .label-left .tag-red {
  float: left;
  color: red;
}
.view-page .card-view .input-fa-view input {
  float: right;
  height: 40px;
  text-align: right;
  margin-right: 10px;
  font-size: 14px;
  width: calc(100% - 120px);
}
.view-page .card-view .input-fa-view .input-button {
  float: right;
  height: 40px;
  line-height: 40px;
  color: grey;
  text-align: right;
  margin-right: 10px;
  font-size: 14px;
  width: calc(100% - 120px);
}
.view-page .submit-button {
  -webkit-border-radius: 20px;
          border-radius: 20px;
  margin-top: 30px;
}
.view-page .next-step {
  text-align: center;
  margin-top: 30px;
  color: #b3b3b3;
  font-size: 14px;
}

