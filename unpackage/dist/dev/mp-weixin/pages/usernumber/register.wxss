.register-view {
  width: 100%;
  height: 100vh;
  background-color: #55aaff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.register-view .register-content {
  width: 90%;
  background-color: #FFFFFF;
  -webkit-border-radius: 10px;
          border-radius: 10px;
}
.register-view .register-content .label-title {
  font-size: 16px;
  font-weight: 700;
  margin: 20px;
}
.register-view .register-content .input-view {
  width: calc(100% - 40px);
  height: 100px;
  margin-left: 20px;
}
.register-view .register-content .input-view .input-view-item {
  height: 30px;
  margin-top: 20px;
  border-bottom: 1px solid #F2F2F2;
}
.register-view .register-content .input-view .input-view-item image {
  width: 20px;
  height: 20px;
  float: left;
}
.register-view .register-content .input-view .input-view-item input {
  padding-left: 5px;
  float: left;
  font-size: 14px;
}
.register-view .register-content .input-view .code-button {
  float: right;
  width: 100px;
  font-size: 14px;
  margin-top: 10px;
  background-color: #b7d6fc;
  color: #007AFF;
  padding: 2px;
}
.register-view .register-submit {
  width: calc(100% - 40px);
  margin-left: 20px;
  margin-top: 40px;
  height: 35px;
  line-height: 35px;
  font-size: 14px;
  background-color: #007AFF;
  color: #FFFFFF;
  -webkit-border-radius: 20px;
          border-radius: 20px;
}
.register-view .user-information {
  font-size: 12px;
  color: #9a9a9a;
  margin: 20px;
}
.register-view .user-information .user-text {
  color: #007AFF;
}

