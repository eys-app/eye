.view-page .back-ground {
  width: 100%;
  height: 120px;
  background-color: #6a85f8;
}
.view-page .back-ground .clear-view {
  width: 100%;
  height: 80px;
}
.view-page .image-view {
  width: 100px;
  height: 100px;
  background-color: #FFFFFF;
  -webkit-border-radius: 10px;
          border-radius: 10px;
  margin-top: -50px;
  margin-left: calc((100% - 100px)/2);
  -webkit-box-shadow: 0 0 10px #cccccc;
          box-shadow: 0 0 10px #cccccc;
}
.view-page .center-view {
  width: calc(90% - 20px);
  margin-top: 20px;
  -webkit-border-radius: 5px;
          border-radius: 5px;
  margin-left: 5%;
  padding: 0 10px;
  -webkit-box-shadow: 10px 10px 10px #e3e3e3;
          box-shadow: 10px 10px 10px #e3e3e3;
}
.view-page .center-view .content-item {
  width: 100%;
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #efefef;
}
.view-page .center-view .content-item image {
  float: left;
  width: 20px;
  height: 20px;
  margin: 10px;
}
.view-page .center-view .content-item .content-text-view {
  float: left;
  line-height: 40px;
}
.view-page .center-view .content-item .right-text {
  float: right;
  font-size: 28px;
  margin-right: 10px;
  color: #cecece;
}

