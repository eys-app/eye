.system-title {
  position: absolute;
  top: 50px;
  left: 10%;
  font-weight: 800;
  color: #FFFFFF;
}
.system-title .weclome {
  font-size: 18px;
}
.system-title .system-title-text {
  font-size: 26px;
  margin-top: 10px;
}
.view-page {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: #F0F0F0;
}
.view-page .back-ground {
  width: 100%;
  height: 220px;
  background-color: #6a85f8;
  text-align: center;
}
.view-page .back-ground .clear-view {
  width: 100%;
  height: 80px;
}
.view-page .back-ground .user-image {
  width: 80px;
  height: 80px;
  margin-left: 20px;
  margin-top: 20px;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  border: 2px solid #F1F1F1;
}
.view-page .back-ground .user-message {
  width: 100%;
  height: 80px;
  text-align: center;
  color: #FFFFFF;
  margin-top: 10px;
  line-height: 30px;
}
.view-page .back-ground .user-message .vip-doc {
  width: 20px;
  height: 20px;
  margin-left: 10px;
}
.view-page .back-ground .user-message .doc-type {
  padding: 3px 10px;
  font-size: 12px;
  background-color: #5dd9be;
  color: #FFFFFF;
  margin-left: 15px;
  -webkit-border-radius: 5px;
          border-radius: 5px;
}
.view-page .item-content {
  margin-top: 10px;
  width: 100%;
  height: 40px;
  line-height: 40px;
  background-color: #FFFFFF;
}

