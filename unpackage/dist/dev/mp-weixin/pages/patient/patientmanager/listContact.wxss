.system-title {
  position: absolute;
  top: 50px;
  left: 10%;
  font-weight: 800;
  color: #FFFFFF;
}
.system-title .weclome {
  font-size: 18px;
}
.system-title .system-title-text {
  font-size: 26px;
  margin-top: 10px;
}
.back-view-class {
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
  position: absolute;
}
.back-view-class .container {
  margin-bottom: 50px;
}
.back-view-class .container .item-list {
  width: 90%;
  height: 40px;
  margin-top: 10px;
  background-color: #FFFFFF;
  line-height: 40px;
  float: left;
}
.back-view-class .container .item-list .user-name {
  float: left;
  margin-left: 10px;
  width: 100px;
  color: #55aa7f;
  font-weight: 600;
}
.back-view-class .container .item-list .user-phone {
  float: left;
  margin-left: 10px;
  color: #888888;
  font-size: 14px;
}
.back-view-class .container .item-list .user-compose {
  float: right;
  margin-right: 20px;
}
.back-view-class .container .item-list-icon {
  width: 10%;
  float: right;
  height: 40px;
  background-color: #FFFFFF;
  margin-top: 10px;
  line-height: 40px;
}
.back-view-class .add-button {
  position: fixed;
  bottom: 10px;
  width: calc(100% - 20px);
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  -webkit-border-radius: 20px;
          border-radius: 20px;
  margin-left: 10px;
}
/* loadmore */
.uni-loadmore {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  padding-bottom: 30rpx;
  font-size: 12px;
  color: gray;
}

