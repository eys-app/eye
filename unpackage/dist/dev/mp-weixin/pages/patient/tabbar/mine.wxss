.system-title {
  position: absolute;
  top: 50px;
  left: 10%;
  font-weight: 800;
  color: #FFFFFF;
}
.system-title .weclome {
  font-size: 18px;
}
.system-title .system-title-text {
  font-size: 26px;
  margin-top: 10px;
}
.view-page {
  position: absolute;
  background-color: #f4f4f4;
  width: 100%;
  height: 100%;
}
.view-page .back-ground {
  width: 100%;
  height: 120px;
  background-color: #6a85f8;
}
.view-page .back-ground .clear-view {
  width: 100%;
  height: 80px;
}
.view-page .image-view {
  width: 100px;
  height: 100px;
  background-color: #FFFFFF;
  -webkit-border-radius: 10px;
          border-radius: 10px;
  margin-top: -50px;
  margin-left: calc((100% - 100px) / 2);
  -webkit-box-shadow: 0 0 10px #cccccc;
          box-shadow: 0 0 10px #cccccc;
}
.view-page .content-view {
  width: 100%;
  -webkit-box-shadow: 0 0 10px #e3e3e3;
          box-shadow: 0 0 10px #e3e3e3;
  -webkit-border-radius: 5px;
          border-radius: 5px;
}
.view-page .content-view .content-item {
  width: 100%;
  height: 40px;
  line-height: 40px;
  margin-bottom: 10px;
  background-color: #FFFFFF;
}
.view-page .content-view .content-item image {
  float: left;
  width: 20px;
  height: 20px;
  margin: 10px;
}
.view-page .content-view .content-item .content-text-view {
  float: left;
  line-height: 40px;
  margin-left: 10px;
}
.view-page .content-view .content-item .right-text {
  float: right;
  font-size: 28px;
  margin-right: 10px;
  color: #cecece;
  margin-top: -2px;
}
.view-page .content-view .content-item .active-patient {
  float: right;
  margin-right: 10px;
  font-size: 14px;
  margin-top: 1px;
  color: #6A85F8;
}
.view-page .logout-button {
  width: 70%;
  height: 35px;
  margin-left: calc(15%);
  line-height: 35px;
  background-color: #6a85f8;
  font-size: 14px;
  margin-top: 30px;
  color: #FFFFFF;
}

