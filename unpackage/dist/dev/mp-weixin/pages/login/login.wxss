.login-back {
  background-color: #6a85f8;
  position: fixed;
  width: 100vw;
  height: 100vh;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.login-back .login-content {
  width: 90%;
  background-color: white;
  -webkit-border-radius: 5px;
          border-radius: 5px;
}
.login-back .login-content .login-title {
  font-size: 16px;
  color: black;
  font-weight: 700;
  margin-left: 30px;
  padding-top: 30px;
}
.login-back .login-content .input-view {
  width: calc(100% - 60px);
  margin-left: 30px;
  margin-top: 30px;
}
.login-back .login-content .input-view .input-view-item {
  border-bottom: 1px solid #e1d9d8;
  height: 30px;
  margin-top: 30px;
}
.login-back .login-content .input-view .input-view-item image {
  width: 20px;
  height: 20px;
  float: left;
}
.login-back .login-content .input-view .input-view-item .input-cus {
  padding-left: 10px;
}
.login-back .login-content .login-button {
  margin-top: 30px;
  height: 40px;
  background-color: #007AFF;
  line-height: 40px;
  color: #FFFFFF;
  -webkit-border-radius: 20px;
          border-radius: 20px;
}
.login-back .login-content .resite-password {
  margin-bottom: 30px;
  color: #007AFF;
  font-size: 12px;
  margin-top: 20px;
  border-bottom: 1px solid #007AFF;
  width: 56px;
  float: left;
}
.login-back .login-content .register {
  float: right;
  width: 48px;
}

